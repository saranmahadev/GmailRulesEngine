# Gmail Rule Engine Environment Configuration
# Copy this file to .env and customize the values

# Database Configuration
DB_URL=sqlite:///emails.db
# For PostgreSQL: DB_URL=postgresql://user:password@localhost/gmail_rules
# For MySQL: DB_URL=mysql://user:password@localhost/gmail_rules

# Gmail API Configuration
CREDENTIALS_FILE=credentials.json
TOKEN_FILE=token.json

# Rules Configuration
RULES_FILE=rules.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Application Settings
MAX_EMAILS_FETCH=100
DEBUG=False